@model IEnumerable<DryFood.Areas.Admin.Data.PTTT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="body_right_top">
    <div class="body_right_top_left">
        <p class="right_top_left_title">Danh sách PTTT</p>
    </div>
    <div class="body_right_top_right">
        <button class="add-new-item" onclick="location.href='@Url.Action("Create", "PTTTs")'">
            <i class="fas fa-plus"></i>
            Thêm PTTT
        </button>
    </div>
</div>
<div class="body_right_bottom">
    <table class="table myAdTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenPTTT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhPTTT)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenPTTT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnhPTTT)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaPTTT }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaPTTT }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaPTTT })
                </td>
            </tr>
        }

    </table>
</div>