@model IEnumerable<DryFood.Areas.Admin.Data.LOAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="body_right_top">
    <div class="body_right_top_left">
        <p class="right_top_left_title">Danh sách loại sản phẩm</p>
    </div>
    <div class="body_right_top_right">
        <button class="add-new-item" onclick="location.href='@Url.Action("Create", "LOAIs")'">
            <i class="fas fa-plus"></i>
            Thêm Loại
        </button>
    </div>
</div>
<div class="body_right_bottom">
    <table class="table myAdTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaLoai }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaLoai }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaLoai })
                </td>
            </tr>
        }

    </table>
</div>