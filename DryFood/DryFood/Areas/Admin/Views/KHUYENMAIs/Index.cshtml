@model IEnumerable<DryFood.Areas.Admin.Data.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="body_right_top">
    <div class="body_right_top_left">
        <p class="right_top_left_title">Danh sách khuyến mãi</p>
    </div>
    <div class="body_right_top_right">
        <button class="add-new-item" onclick="location.href='@Url.Action("Create", "KHUYENMAIs")'">
            <i class="fas fa-plus"></i>
            Thêm KM
        </button>
    </div>
</div>
<div class="body_right_bottom">
    <table class="table myAdTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenKM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HSD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhKM)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaTri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HSD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnhKM)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaKM }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaKM }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaKM })
                </td>
            </tr>
        }

    </table>
</div>